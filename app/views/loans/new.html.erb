<hr>
<div class="d-flex justify-content-center">
  <div class="col-md-6">
    <div class="card card-sm card-outline-secondary">
      <div class="card-header bg-dark text-center text-white">
        Amortization Calculator Dream Spring
      </div>
      <div class="card-body">
          <%= form_with(model: @loan) do |f| %>
            <%= render 'shared/error_messages', resource: @loan  %>
            <div class="form-group">
              <%= f.label :amount %>
              <%= f.text_field :amount, class: 'form-control' %>
           </div>
            <div class="form-group">
              <%= f.label :term %><br>
              <%= f.text_field :term, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :interest_rate %><br>
              <%= f.text_field :interest_rate, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :request_date %><br>
              <%=  f.text_field :request_date, class: 'flatpickr'%><br>
            </div>

            <div class='form-group d-flex justify-content-center'>
              <%= f.submit "Generate Amortization schedule", class: 'btn btn-sm btn-success' %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

